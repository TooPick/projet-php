{% extends "::layout.html.twig" %}

{% block body %}
	<h3>Profil</h3>
	<hr>
	<h4>Informations</h4>
	
	<ul class="list-group">
		<li class="list-group-item">Nom d'utilisateur : {{ utilisateur.username }}</li>
		<li class="list-group-item">Nom : {{ utilisateur.utiNom }}</li>
		<li class="list-group-item">Prénom : {{ utilisateur.utiPrenom }}</li>
		<li class="list-group-item">Email : {{ utilisateur.utiMail }}</li>
	</ul>
	<button class="btn btn-primary" onclick="window.location.href='{{ path('pp_user_editerProfil') }}'"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier mes informations</button>
	
	<hr>
	<h4>Gérer mes recettes</h4>
	
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Etat de la recette</th>
				<th>Titre de la recette</th>
				<th>Catégorie</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for recette in recettes %}
				<tr>
					<td>{% if recette.rctStatut == "soumise" %}En attente de relecture{% elseif recette.rctStatut == "brouillon" %}Brouillon{% else %}Publiée{% endif %}</td>
					<td>{{ recette.rctTitre }}</td>
					<td>{{ recette.categorie.catLabel }}</td>
					<td><button class="btn btn-primary" onclick="window.open('{{ path('pp_appli_recetteDetail', {id:recette.id}) }}')"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Voir</button> <button class="btn btn-primary" onclick="window.location.href='{{ path('pp_user_editRecette', {id: recette.id}) }}'"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editer</button> <button class="btn btn-danger" data-toggle="modal" data-target="#modalSuppression" data-path="{{ path('pp_user_supprimerRecette', {id:recette.id}) }}"><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Supprimer</button></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	
	<hr>
	<h4>Ajouter une nouvelle recette</h4>
	<button class="btn btn-success" onclick="window.location.href='{{ path('pp_user_ajouterRecette') }}'"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Ajouter une recette</button>
	
	<div class="modal fade" id="modalSuppression" role="dialog" aria-labelledby="confirmationSupression" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
					<h4 class="modal-title" id="confirmationSupression">Confirmation de suppression</h4>
				</div>
				
				<div class="modal-body">
					<p>Voulez-vous vraiment supprimer cette recette ?</p>
					<div class="text-right">
						<button id="suppression" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Supprimer</button> <button class="btn btn-default" type="button" class="close" data-dismiss="modal">Annuler</button>
					</div>
					<input hidden type="text" id="path" />
				</div>
			</div>
		</div>
	</div>
	
	{% block javascripts %}
		<script>
			$('#modalSuppression').on('show.bs.modal', function (event) {
			  var button = $(event.relatedTarget)
			  var path = button.data('path')
			  var modal = $(this)
			  modal.find('.modal-body input').val(path)
			})
			
			$('#suppression').click(function() {
				var path = $('#path').val()
				window.location.replace(path);
			});
		</script>
	{% endblock %}
	
{% endblock %}