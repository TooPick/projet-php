	<form method="POST">
		<div class="input-group">
			<input class="form-control" type="text" name="searchUser" id="searchUser" placeholder="Rechercher un utilisateur...">
			<span class="input-group-btn">
				<input class="btn btn-default" type="submit" value="Rechercher" name="rechercher" id="rechercher">
			</span>
		</div>
	</form>
	<br />
	
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Nom d'utilisateur</th>
				<th>Email</th>
				<th>Nombre de recettes</th>
				<th>Nom</th>
				<th>PrÃ©nom</th>
				<th>Actions</th>
			</tr>
		</thead>
		
		<tbody>
			{% for utilisateur in utilisateurs %} 
				<tr>
					<td>{{ utilisateur.username }}</td>
					<td>{{ utilisateur.utiMail }}</td>
