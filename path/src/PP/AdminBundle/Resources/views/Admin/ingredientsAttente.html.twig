{% extends "::layout.html.twig" %}

{% block body %}
	{% include "PPAdminBundle:Admin:navAdministration.html.twig" %}
	<h3></h3>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Description</th>
				<th>Illustration</th>
				<th>Utilisateur</th>
				<th>Actions</th>
			</tr>
		</thead>
		
		<tbody>
			{% for ingredient in ingredients %}
				<tr>
					<td>{{ ingredient.igdLabel }}</td>
					<td>{{ ingredient.igdDescription }}</td>
					<td>{{ ingredient.igdIllustration }}</td>
					<td>{{ ingredient.utilisateur.username }}</td>
					<td><button class="btn btn-primary" onclick="window.location.href=''"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editer</button></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
