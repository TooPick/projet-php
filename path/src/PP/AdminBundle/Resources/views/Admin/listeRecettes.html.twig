{% extends "::layout.html.twig" %}

{% block body %}
	{% include "PPAdminBundle:Admin:navAdministration.html.twig" %}
	
	<form method="POST">
		<div class="input-group">
			<input class="form-control" type="text" name="searchRecette" id="searchRecette" placeholder="Rechercher une recette...">
			<span class="input-group-btn">
				<input class="btn btn-default" type="submit" value="Rechercher" name="rechercher" id="rechercher">
			</span>
		</div>
	</form>
	<br />
	
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Titre de la recette</th>
				<th>Auteur</th>
				<th>Cat√©gorie</th>
				<th>Actions</th>
			</tr>
		</thead>
		
		<tbody>
			{% for recette in recettes %} 
				<tr>
					<td>{{ recette.rctTitre }}</td>
					<td>{{ recette.utilisateur.username }}</td>
					<td>{{ recette.categorie.catLabel }}</td>
					<td><button  class="btn btn-primary" onclick="window.location.href='{{ path('pp_appli_recetteDetail', {id:recette.id}) }}'"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Voir</button> <button  class="btn btn-primary" onclick="window.location.href='{{ path('pp_admin_editerRecette', {id:recette.id}) }}'"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editer</button></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
