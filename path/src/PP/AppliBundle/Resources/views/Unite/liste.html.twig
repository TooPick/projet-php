{% extends "::layout.html.twig" %}

{% block body %}
	<h3>Liste des unites <a class="btn btn-success" href="{{ path('pp_appli_ajouterUnite') }}">Nouveau</a></h3>
	<a href="{{ path('pp_user_profil') }}">Retour au profil</a>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Etat</th>
				<th>Nom</th>
				<th>Acronyme</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		
		<tbody>
			{% for unite in unites %}
				<tr>
					<td>{% if unite.uniValide == 1 %}Valid√©{% else %}En attente{% endif %}</td>
					<td>{{ unite.uniLabel }}</td>
					<td>{{ unite.uniShortLabel }}</td>
					<td>{{ unite.uniDescription }}</td>
					<td><a class="btn btn-primary" href="{{ path('pp_appli_editionUnite', {id: unite.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editer</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	
{% endblock %}
