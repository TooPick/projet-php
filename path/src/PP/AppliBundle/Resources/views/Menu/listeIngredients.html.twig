{% extends "::layout.html.twig" %}

{% block body %}
	<h3>Liste des ingrédients du menu : <strong>{{ menu.nom }}</strong></h3>
	<a href="{{ path('pp_appli_menus') }}">Retour à la liste des menus</a>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Ingredient</th>
				<th>Quantité</th>
			</tr>
		</thead>
		
		<tbody>
			{% for recette in menu.recettes %}
				{% for ingredient in recette.ingredients %}
					<tr>
						<td>{{ ingredient.ingredient.igdLabel }}</td>
						<td>{{ ingredient.quantite }} {{ ingredient.unite.uniLabel }}</td>
					</tr>
				{% endfor %}
			{% endfor %}
		</tbody>
	</table>
	
{% endblock %}
